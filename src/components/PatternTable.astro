---
import { getCollection } from "astro:content";

const locale = Astro.currentLocale || "ru";
const docs = await getCollection("docs", ({ id }) => {
    return id.startsWith(`${locale}/patterns/`);
});

const patterns = docs.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<div class="pattern-table-container">
    <table>
        <thead>
            <tr>
                <th>{locale === "ru" ? "Название" : "Title"}</th>
                <th>{locale === "ru" ? "Описание" : "Description"}</th>
                <th>{locale === "ru" ? "Применение" : "Usage"}</th>
            </tr>
        </thead>
        <tbody>
            {
                patterns.map((pattern) => {
                    const slug = pattern.id
                        .replace(/\.(md|mdx)$/, "")
                        .toLowerCase();
                    return (
                        <tr>
                            <td>
                                <a href={`/${slug}/`}>{pattern.data.title}</a>
                            </td>
                            <td>{pattern.data.description || ""}</td>
                            <td>{(pattern.data as any).use_key || ""}</td>
                        </tr>
                    );
                })
            }
        </tbody>
    </table>
</div>

<style>
    .pattern-table-container {
        overflow-x: auto;
        margin-top: 2rem;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    table th,
    table td {
        padding: 0.5rem;
        border: 1px solid var(--sl-color-hairline);
    }
    table th {
        background: var(--sl-color-bg-nav);
        font-weight: 600;
        text-align: left;
    }
</style>
